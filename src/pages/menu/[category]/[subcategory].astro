---
import Layout from '../../../layouts/Layout.astro';
import MenuIsland from '../../../components/MenuIsland.astro';
import { readFileSync } from 'fs';
import { join } from 'path';

interface Product {
  id: number;
  name: string;
  slug: string;
  price: number;
  category: string;
  subcategory: string;
  img: string;
  description?: string;
}

export async function getStaticPaths() {
  const filePath = join(process.cwd(), 'public', 'data', 'menu_prototipo.json');
  const fileContent = readFileSync(filePath, 'utf-8');
  const products: Product[] = JSON.parse(fileContent);
  
  // Obtener todas las combinaciones únicas de categoría + subcategoría
  const combinations = new Map<string, { category: string; subcategory: string; products: Product[] }>();
  
  products.forEach(product => {
    const key = `${product.category}-${product.subcategory}`;
    if (!combinations.has(key)) {
      combinations.set(key, {
        category: product.category,
        subcategory: product.subcategory,
        products: []
      });
    }
    combinations.get(key)!.products.push(product);
  });
  
  return Array.from(combinations.values()).map(({ category, subcategory, products: categoryProducts }) => {
    const categorySlug = category
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/(^-|-$)/g, '');
    
    const subcategorySlug = subcategory
      .toLowerCase()
      .normalize('NFD')
      .replace(/[\u0300-\u036f]/g, '')
      .replace(/[^a-z0-9]+/g, '-')
      .replace(/(^-|-$)/g, '');
    
    return {
      params: { 
        category: categorySlug,
        subcategory: subcategorySlug
      },
      props: { 
        category,
        subcategory,
        categorySlug,
        subcategorySlug,
        products: categoryProducts
      }
    };
  });
}

interface Props {
  category: string;
  subcategory: string;
  categorySlug: string;
  subcategorySlug: string;
  products: Product[];
}

const { category, subcategory, categorySlug, subcategorySlug, products } = Astro.props;

const pageTitle = `${subcategory} - ${category} - Señora Qumara`;
const pageDescription = `${subcategory} de ${category.toLowerCase()}. ${products.length} productos disponibles con delivery a domicilio en Trujillo.`;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="menu-page">
    <div class="menu-header">
      <div class="breadcrumb-nav">
        <a href="/menu">Menú</a>
        <span>›</span>
        <a href={`/menu/${categorySlug}`}>{category}</a>
        <span>›</span>
        <span class="current">{subcategory}</span>
      </div>
      
      <h1>{subcategory}</h1>
      <p class="menu-category-tag">{category}</p>
      <p class="menu-subtitle">{products.length} productos disponibles</p>
      
      <div class="nav-buttons">
        <a href={`/menu/${categorySlug}`} class="btn-back-menu">← Volver a {category}</a>
        <a href="/menu" class="btn-back-menu">Ver todo el menú</a>
      </div>
    </div>
    
    <MenuIsland initialCategory={category} initialSubcategory={subcategory} />
  </div>
</Layout>

<style>
  .menu-page {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 5%;
  }

  .menu-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 3px solid var(--secondary-color);
  }

  .breadcrumb-nav {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
  }

  .breadcrumb-nav a {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: var(--transition);
  }

  .breadcrumb-nav a:hover {
    text-decoration: underline;
  }

  .breadcrumb-nav span {
    color: var(--text-light);
  }

  .breadcrumb-nav .current {
    color: var(--primary-dark);
    font-weight: 600;
  }

  .menu-header h1 {
    font-size: 3rem;
    color: var(--primary-dark);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .menu-category-tag {
    display: inline-block;
    padding: 0.4rem 1rem;
    background: var(--secondary-color);
    color: var(--primary-dark);
    border-radius: 20px;
    font-weight: 600;
    margin-bottom: 1rem;
  }

  .menu-subtitle {
    font-size: 1.2rem;
    color: var(--text-light);
    margin-bottom: 1.5rem;
  }

  .nav-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn-back-menu {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background: var(--white);
    color: var(--primary-color);
    text-decoration: none;
    border: 2px solid var(--primary-color);
    border-radius: var(--radius);
    font-weight: 600;
    transition: var(--transition);
  }

  .btn-back-menu:hover {
    background: var(--primary-color);
    color: var(--white);
  }

  @media (max-width: 768px) {
    .menu-header h1 {
      font-size: 2rem;
    }

    .menu-subtitle {
      font-size: 1rem;
    }

    .breadcrumb-nav {
      font-size: 0.85rem;
    }

    .nav-buttons {
      flex-direction: column;
    }

    .btn-back-menu {
      width: 100%;
    }
  }
</style>
