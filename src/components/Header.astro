---
const currentPath = Astro.url.pathname;
---
<header>
  <div class="logo" aria-label="Logo Señora Qumara">Señora Qumara</div>
  <nav>
    <ul role="menubar">
      <li><a href="/" class:list={[currentPath === '/' && 'active']} role="menuitem">Inicio</a></li>
      <li><a href="/menu" class:list={[currentPath === '/menu' && 'active']} role="menuitem">Menú</a></li>
      <li><a href="/delivery" class:list={[currentPath === '/delivery' && 'active']} role="menuitem">Delivery</a></li>
      <li><a href="/nosotros" class:list={[currentPath === '/nosotros' && 'active']} role="menuitem">Nosotros</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    background-color: var(--white);
    box-shadow: var(--shadow);
    position: sticky;
    top: 0;
    z-index: 100;
    padding: 1rem 5%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--primary-color);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  nav ul {
    list-style: none;
    display: flex;
    gap: 20px;
  }

  nav a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: 600;
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    transition: var(--transition);
  }

  nav a:hover,
  nav a.active {
    background-color: var(--primary-color);
    color: var(--white);
  }

  @media (max-width: 768px) {
    header {
      flex-direction: column;
      gap: 1rem;
    }

    nav ul {
      gap: 10px;
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>
