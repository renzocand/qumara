<script is:inline>
  // Sincronizar contador del header con el carrito
  function updateHeaderCart() {
    const badge = document.getElementById('header-cart-count');
    if (badge && window.cartStore) {
      const count = window.cartStore.getItemCount();
      badge.textContent = count.toString();
      badge.style.display = count > 0 ? 'inline-flex' : 'none';
    }
  }

  window.addEventListener('cart-updated', updateHeaderCart);
  // Ejecutar al cargar
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateHeaderCart);
  } else {
    updateHeaderCart();
  }
</script>

